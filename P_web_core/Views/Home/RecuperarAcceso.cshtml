@model UsuarioModel

@{
    Layout = "_Layout_externo";  // Hace uso del layout externo
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">Recuperar Acceso</h3>
                        <form asp-action="RecuperarAcesso" asp-controller="Home">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control p_input asp-for ="CorreoElectronico">
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">Recuperar Acceso</button>
                            </div>
                            <p class="sign-up text-center">¿Ya tienes cuenta? <a href="#">Iniciar sesión</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
