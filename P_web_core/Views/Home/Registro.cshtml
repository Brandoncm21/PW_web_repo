@{
    Layout = "_Layout_externo";  // Hace uso del layout externo
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">Register</h3>
                        <form>
                            <div class="form-group">
                                <label>Nombre</label>
                                <input type="text" class="form-control p_input" placeholder="Introduce tu nombre">
                            </div>
                            <div class="form-group">
                                <label>Identificación</label>
                                <input type="text" class="form-control p_input" placeholder="Introduce tu número de identificación">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control p_input" placeholder="Introduce tu correo electrónico">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control p_input" placeholder="Introduce tu contraseña">
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input"> Remember me
                                    </label>
                                </div>
                                <a href="#" class="forgot-pass">Forgot password</a>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">Sign Up</button>
                            </div>
                            <p class="sign-up">Already have an Account? <a asp-action="Index" asp-controller="Home">Login</a></p>
                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
